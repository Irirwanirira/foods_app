<div>
  <h1>Foods</h1>

  <%= link_to "Add food", new_user_food_path %>

  <div id="foods">
    <% if @foods.empty? %>
      <p>No foods available.</p>
    <% else %>
      <table>
        <thead>
          <tr>
            <th>Food</th>
            <th>Measurement Unit</th>
            <th>Unit Price</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody>
          <% @foods.each do |food| %>
            <tr>
              <td>

                <%= link_to food.name, user_food_url(current_user.id, food.id) %>
              </td>
              <td><%= food.measurement_unit %></td>
              <td><%= food.price %></td>
              <td>
                <%= button_to "Delete", 
                  user_food_path(current_user.id, food.id), method: :delete,
                  data: { confirm: "Delete food?" } %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    <% end %>
  </div>
</div>